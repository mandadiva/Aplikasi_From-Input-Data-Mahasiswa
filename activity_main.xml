<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@android:color/white">

    <!-- Judul -->
    <TextView
        android:id="@+id/lblJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/judul_form"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="16dp" />

    <!-- Input Nama -->
    <TextView
        android:id="@+id/lblNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="@string/label_nama"
        android:paddingBottom="4dp"/>

    <EditText
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_nama"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp"
        android:textSize="14sp"
        android:layout_marginBottom="12dp"/>

    <!-- Input NPM -->
    <TextView
        android:id="@+id/lblNPM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_npm"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="4dp"/>

    <EditText
        android:id="@+id/npm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_npm"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp"
        android:textSize="14sp"
        android:layout_marginBottom="12dp"/>

    <!-- Input Tempat Lahir -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tempat Lahir"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="4dp"/>

    <EditText
        android:id="@+id/tempatLahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan tempat lahir"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp"
        android:textSize="14sp"
        android:layout_marginBottom="12dp"/>

    <!-- Input Tanggal Lahir -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="4dp"/>

    <EditText
        android:id="@+id/tanggalLahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dd-mm-yyyy"
        android:inputType="date"
        android:textColor="@android:color/black"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"/>

    <!-- Tombol Tampilkan -->
    <Button
        android:id="@+id/btntampil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_tampil"
        android:onClick="TampilNama"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_marginBottom="20dp"/>

    <!-- Output -->
    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text=""
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

</LinearLayout>
